<button class="btn @(Kind == MC_ButtonKind.Normal ? "btn" : Kind == MC_ButtonKind.Outline ? "btn-outline" : "text")-@(Color.ToString().ToLower()) @(Size == MC_ButtonSize.Small ? "btn-sm" : Size == MC_ButtonSize.Large ? "btn-lg" : null)" type="@(Type.ToString().ToLower())" disabled="@Disabled">@ChildContent</button>

@code {
    [Parameter] public required RenderFragment ChildContent { get; set; }
    [Parameter] public MC_ButtonColor Color { get; set; }
    [Parameter] public MC_ButtonKind Kind { get; set; }
    [Parameter] public MC_ButtonType Type { get; set; }
    [Parameter] public MC_ButtonSize Size { get; set; }
    [Parameter] public bool Disabled { get; set; }
    public enum MC_ButtonColor
    {
        Primary,
        Secondary,
        Success,
        Danger,
        Warning,
        Info,
        Light,
        Dark,
        Link,
    }
    public enum MC_ButtonType
    {
        Button,
        Submit,
        Reset,
    }
    public enum MC_ButtonKind
    {
        Normal,
        Outline,
        Link,
    }
    public enum MC_ButtonSize
    {
        Normal,
        Small,
        Large,
    }
}
