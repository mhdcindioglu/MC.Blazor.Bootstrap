@code {
    [Parameter] public EventCallback OnClick { get; set; }
    [Parameter] public required string Header { get; set; }
    [Parameter] public bool Selected { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [CascadingParameter(Name = "Parent")] public MC_Navigation Parent { get; set; } = default!;
    internal string ID = $"navigation-tab-{Guid.NewGuid()}";

    protected override void OnInitialized()
    {
        if (!Parent._Tabs.Any()) Selected = true;
        Parent.Add(this);
    }
}
